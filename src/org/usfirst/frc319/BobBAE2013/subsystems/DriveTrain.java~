    public void TankDrive(Joystick stick){
        double leftscale = 1;
        double rightscale = 1;
        tankDrive.tankDrive(stick.getRawAxis(5)*rightscale, stick.getRawAxis(2)*leftscale);
        
    }
    public void DriveBack(){
        double leftscale = .7;
        double rightscale = .7;
        tankDrive.tankDrive(-1*leftscale, -1*rightscale);
    }
    public void TurnAround(){
        double leftscale = .7;
        double rightscale = .7;
        tankDrive.tankDrive(1*leftscale, -1*rightscale);
    }
    public void Stop(){
        tankDrive.tankDrive(0, 0);
    }
